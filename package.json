{
  "name": "elden-ring-github",
  "version": "1.1.0",
  "description": "Shows an Elden Ring banner when creating or merging pull requests on GitHub",
  "main": "dist/content.js",
  "scripts": {
    "build": "tsdown && npm run copy-static",
    "dev": "tsdown --watch",
    "clean": "rm -rf dist",
    "copy-static": "cp manifest.json dist/ && cp -r src/popup/*.html src/popup/*.css dist/popup/ && mkdir -p dist/content && cp src/content/styles.css dist/content/ && cp -r src/assets dist/",
    "lint": "oxlint src/",
    "lint:fix": "oxlint src/ --fix",
    "format": "prettier --write src/**/*",
    "format:check": "prettier --check src/**/*",
    "prebuild": "npm run clean && mkdir -p dist/popup",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "keywords": [
    "chrome-extension",
    "github",
    "elden-ring",
    "pull-request",
    "merge",
    "banner"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/chrome": "^0.0.268",
    "@types/node": "^22.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "oxlint": "^0.9.0",
    "prettier": "^3.3.0",
    "tsdown": "^0.2.13",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leochiu-a/elden-ring-github.git"
  },
  "bugs": {
    "url": "https://github.com/leochiu-a/elden-ring-github/issues"
  },
  "homepage": "https://github.com/leochiu-a/elden-ring-github#readme",
  "lint-staged": {
    "*.{ts,js}": [
      "oxlint --fix",
      "prettier --write"
    ],
    "*.{html,css,json,md}": [
      "prettier --write"
    ]
  }
}
