{
  "manifest_version": 3,
  "name": "Elden Ring GitHub Merger",
  "version": "1.0.0",
  "description": "Shows an Elden Ring banner when merging on GitHub",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Elden Ring GitHub Merger"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://github.com/*"]
    }
  ]
}